{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug r0vm with ELF file",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/emulators/sp1/target/debug/r0vm",
            "args": ["--test-elf", "${workspaceFolder}/emulators/sp1/my.elf"],
            "cwd": "${workspaceFolder}",
            "env": {
                "ARGV0": "",
                "RUST_LOG": "debug"
            },
            "sourceMap": {
                "/rustc/": "${env:HOME}/.rustup/toolchains/stable-x86_64-unknown-linux-gnu/lib/rustlib/src/rust/"
            },
            "sourceLanguages": ["rust"],
            "console": "internalConsole",
            "preLaunchTask": "build r0vm",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
} 